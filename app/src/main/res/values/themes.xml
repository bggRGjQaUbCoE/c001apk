<resources>

    <style name="Theme.Material3.DynamicColors.DayNight.Rikka" parent="Theme.Material3.DynamicColors.Light.Rikka">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimaryVariant">@color/primary_dark_light_light_status_bar</item>
    </style>

    <style name="Platform.Theme.C001apk" parent="Theme.Material3.DynamicColors.DayNight.Rikka" />

    <style name="Theme.C001apk" parent="Platform.Theme.C001apk">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Preference title -->
        <item name="android:textAppearanceListItem">?textAppearanceSubtitle1</item>
        <!-- Preference category title -->
        <item name="android:colorAccent">?colorPrimary</item>
        <!-- Preference switch -->
        <item name="android:colorControlActivated">?colorPrimary</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Rikka.Material3.Mod</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog.Md3</item>
    </style>

    <style name="PreferenceThemeOverlay.Rikka.Material3.Mod" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceCategoryTitleTextAppearance">
            @style/TextAppearance.Rikka.CategoryTitle.Material3
        </item>
        <item name="preferenceCategoryTitleTextColor">?colorPrimary</item>
        <item name="preferenceCategoryStyle">@style/Preference.Rikka.Category.Material3.Mod</item>
        <item name="preferenceStyle">@style/Preference.Rikka.Material3</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.Rikka.CheckBoxPreference.Material3
        </item>
        <item name="dialogPreferenceStyle">@style/Preference.Rikka.Material3</item>
        <item name="editTextPreferenceStyle">@style/Preference.Rikka.EditTextPreference.Material3
        </item>
        <item name="dropdownPreferenceStyle">@style/Preference.Rikka.DropdownPreference.Material3
        </item>
        <item name="switchPreferenceStyle">@style/Preference.Rikka.SwitchPreference.Material3</item>
        <item name="seekBarPreferenceStyle">@style/Preference.Rikka.SeekbarPreference.Material3
        </item>
        <item name="simpleMenuPreferenceStyle">
            @style/Preference.Rikka.SimpleMenuPreference.Material3
        </item>
        <item name="materialSwitchPreferenceStyle">@style/Preference.Rikka.MateriaSwitchPreference
        </item>
    </style>

    <style name="Preference.Rikka.Category.Material3.Mod" parent="@style/Preference.Category.Material">
        <item name="android:layout">@layout/m3_preference_category</item>
        <item name="iconSpaceReserved">false</item>
        <item name="allowDividerAbove">true</item>
        <item name="allowDividerBelow">true</item>
    </style>

    <style name="iconMiniScrollCardRadius">
        <item name="cornerSize">18dp</item>
    </style>

    <style name="Widget.Material3.TabLayout.OnSurface.Trans" parent="Base.Widget.Material3.TabLayout.OnSurface">
        <item name="android:background">@drawable/tab_background_trans</item>
    </style>

    <style name="Widget.Material3.TabLayout.OnSurface.Mod" parent="Base.Widget.Material3.TabLayout.OnSurface">
        <item name="android:background">@drawable/tab_background</item>
    </style>

    <style name="searchTopicRadius">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="textScrollImgRadius">
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeTopRight">12dp</item>
    </style>

    <style name="Theme.User" parent="Theme.Material3.DynamicColors.Light.Rikka">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MaterialTransparent" parent="Theme.C001apk">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="circleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="UserTextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.About" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#465C67</item>
        <item name="colorPrimaryDark">#465C67</item>
    </style>

    <style name="Widget.Material3.Button.TextButton.Mod" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="enforceTextAppearance">false</item>
        <item name="android:maxWidth">@dimen/m3_btn_max_width</item>
        <item name="android:paddingLeft">@dimen/m3_btn_text_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/m3_btn_text_btn_padding_right</item>
        <item name="android:paddingTop">@dimen/m3_btn_padding_top</item>
        <item name="android:paddingBottom">@dimen/m3_btn_padding_bottom</item>
        <item name="android:insetTop">@dimen/m3_btn_inset</item>
        <item name="android:insetBottom">@dimen/m3_btn_inset</item>
        <item name="android:textAppearance">@macro/m3_comp_text_button_label_text_type</item>
        <item name="shapeAppearance">@style/ShapeAppearance.M3.Comp.TextButton.Container.Shape
        </item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.Button.TextButton</item>
        <item name="iconTint">@color/m3_text_button_foreground_color_selector</item>
        <item name="backgroundTint">@color/m3_text_button_background_color_selector</item>
        <item name="rippleColor">@color/m3_text_button_ripple_color_selector</item>
    </style>

    <style name="OverflowMenu" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="CustomBottomSheet.Md3" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomBottomSheetDialog.Md3" parent="@style/ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet.Md3</item>
    </style>

    <style name="Widget.CheckableChipView" parent="">
        <item name="android:padding">8dp</item>

        <item name="android:textColor">@color/advanced_menu_item_text_not_checked</item>
        <item name="android:textSize">14sp</item>

        <item name="ccv_outlineWidth">1dp</item>
        <item name="ccv_outlineColor">?attr/colorPrimary</item>

        <item name="android:color">?attr/colorPrimary</item>

        <item name="ccv_clearIcon">@drawable/ic_check</item>
        <item name="ccv_foreground">?android:selectableItemBackground</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ThemeOverlay.MaterialAlertDialog.Rounded" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.Rounded</item>
    </style>

    <style name="MaterialAlertDialog.Rounded" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialAlertDialog.Rounded</item>
    </style>

    <style name="ShapeAppearance.MaterialAlertDialog.Rounded" parent="">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="TabText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

</resources>